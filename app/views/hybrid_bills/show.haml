- page_title = title("#{t('hybrid_bills.id' + @business_id + '.object_title')} #{t('hybrid_bills.hs2')} #{t('hybrid_bills.hs2_bill').capitalize}")

#content.section--primary{ tabindex: '0' }
  .container
    %h1
      %span= page_title

    - if flash[:alert]
      .status--highlight.theme--warning
        %h2{ aria: { live: 'assertive'} }
          = t('.something_went_wrong_title')
        %p= t(flash[:alert])

    %noscript
      .status--highlight.theme--caution
        %p= t('javascript_disabled')

    .status--highlight
      %p= "#{t('hybrid_bills.id' + @business_id + '.petition_status_active')}"

%section
  .container
    %h2= t('.overview').capitalize

    %p= "#{t('hybrid_bills.id' + @business_id + '.overview_a')}"

    %p
      = t('.overview_b')
      = succeed "." do
        = link_to 'https://www.gov.uk/government/organisations/high-speed-two-limited', target: '_blank' do
          = t('.overview_c')
          %span.sr-only>
            = t('open_new_window_link')

%section
  .container
    %h2= "#{t('hybrid_bills.id' + @business_id + '.objecting_subtitle')}"

    %p= "#{t('hybrid_bills.id' + @business_id + '.objecting_a')}"

    %p= "#{t('hybrid_bills.id' + @business_id + '.objecting_b')}"

    %p= t('.objecting_c')

%section
  .container
    %h2= t('.contact_details').capitalize

    %p= t('.contact_details_a')

    %p
      = t('.contact_details_b')
      = succeed "." do
        = link_to 'https://www.parliament.uk/business/committees/committees-a-z/lords-select/high-speed-rail-west-midlands-crewe-bill-select-committee-lords/', target: '_blank' do
          = t('hybrid_bills.hs2_committee')
          %span.sr-only>
            = t('open_new_window_link')

%section
  .container
    %h2= t('.after_sending_petition').capitalize

    %ul.track--alternative
      %li
        %h3.typography--light
          = "#{t('hybrid_bills.id' + @business_id + '.after_sending_petition_a')}"
      %li
        %h3.typography--light
          = "#{t('hybrid_bills.id' + @business_id + '.after_sending_petition_b')}"
      %li
        %h3.typography--light
          = "#{t('hybrid_bills.id' + @business_id + '.after_sending_petition_c')}"
      %li
        %h3.typography--light
          = "#{t('hybrid_bills.id' + @business_id + '.after_sending_petition_d')}"
      %li
        %h3.typography--light
          = "#{t('hybrid_bills.id' + @business_id + '.after_sending_petition_e')}"

    .section--major
      %noscript
        .status--highlight.theme--warning
          %p
            = t('cookies_disabled_a')
            = link_to 'https://beta.parliament.uk/meta/cookie-policy' do
              = t('cookies')
            = t('cookies_disabled_b')

          %p= t('cookies_disabled_c')

          %p
            = succeed "." do
              = t('cookies_disabled_d')
              = t('hybrid_bills.object_by_email')

      =link_to t('hybrid_bills.object_online').capitalize, hybrid_bill_path(@business_id, step: 'writing-your-petition-online'), class: 'btn--primary'
      =link_to t('hybrid_bills.object_by_email').capitalize, hybrid_bill_email_path(@business_id), class: 'btn--primary--inverse'

      .status--highlight.theme--warning
        %p= "We regret that the submission portal is temporarily unavailable.  Please could you try to resubmit later."

        %p= sanitize "Alternatively you can submit your petition by email <a href='mailto:hlprivatebills@parliament.uk'>hlprivatebills@parliament.uk</a> or you may post your petition to Mark Cooper, Hybrid Bill Office, House of Lords, Westminster, SW1A 0PW."

        %p= sanitize "If you would like to speak to someone please contact  Mark Cooper on <a href='tel:020 7219 3231'>020 7219 3231</a> or Chris Salmon Percival on <a href='tel:077 1414 7043'>077 1414 7043</a>."
